{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "tango-magenta-core",
  "version": "2.0.0",

  "identity": {
    "name": "TANGO MAGENTA",
    "tagline": "El primer sistema que respira",
    "type": "studio-broadcast-system",
    "domain": "dtslib1979.github.io/tango-magenta",
    "language": "es-AR",
    "NOT": "website"
  },

  "philosophy": {
    "core": "El cuerpo es la interfaz. El tango es el protocolo.",
    "humanRole": "El bailarín que navega",
    "systemRole": "Acompañar, no responder",
    "result": "Un legado que respira"
  },

  "architecture": {
    "name": "5-Layer Studio & Broadcast System",
    "layers": [
      { "level": 1, "id": "emisión", "name": "Emisión", "purpose": "La señal que sale al mundo", "verb": "Sintonizá" },
      { "level": 2, "id": "cuerpo", "name": "Cuerpo", "purpose": "La gramática del movimiento", "verb": "Sentí" },
      { "level": 3, "id": "laboratorio", "name": "Laboratorio", "purpose": "El motor de gestos", "verb": "Experimentá" },
      { "level": 4, "id": "control", "name": "Control", "purpose": "La cabina del sistema", "verb": "Observá" },
      { "level": 5, "id": "legado", "name": "Legado", "purpose": "Donde la vida se vuelve mundo", "verb": "Recordá" }
    ]
  },

  "bodyProtocol": {
    "version": "1.0",
    "bpm": 70,
    "interactions": {
      "scroll": "acercarse",
      "tap": "compromiso",
      "hold": "esperar",
      "swipe": "girar",
      "idle": "respirar",
      "back": "soltar"
    }
  },

  "timing": {
    "bpm": 70,
    "beat_ms": 857,
    "half_beat_ms": 428,
    "breath_ms": 2571,
    "phrase_ms": 3428
  },

  "theme": {
    "primary": "#E91E63",
    "accent": "#FFD54F",
    "bg": "#0a0008",
    "glow": "#f0e8ec",
    "void": "#0a0008",
    "smoke": "#1a1118"
  },

  "audio": {
    "sources": ["spotify", "youtube"],
    "serviceWorker": false,
    "position": "fixed-bottom",
    "height": "80px"
  },

  "compatibility": {
    "bingReadAloud": true,
    "translation": true,
    "semanticHTML": true,
    "reducedMotion": true,
    "mobileOnly": true,
    "maxWidth": "430px"
  }
}
